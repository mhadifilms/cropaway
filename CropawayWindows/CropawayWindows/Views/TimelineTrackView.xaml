<UserControl x:Class="CropawayWindows.Views.TimelineTrackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CropawayWindows.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:TimelineViewModel}"
             Background="{StaticResource PanelBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Timeline track area -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Padding="8,4"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <DockPanel>
                <!-- Left: Timeline label -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                               Text="{StaticResource IconTimeline}"
                               FontSize="14" Margin="0,0,6,0"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="Timeline" FontWeight="SemiBold" FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Right: Zoom controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource ToolbarButton}"
                            Command="{Binding ZoomOutCommand}"
                            ToolTip="Zoom Out"
                            Padding="4,3">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="{StaticResource IconZoomOut}"
                                   FontSize="12" />
                    </Button>

                    <TextBlock Text="{Binding ZoomLevel, StringFormat='{}{0:P0}'}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10" VerticalAlignment="Center"
                               Margin="4,0" MinWidth="36" TextAlignment="Center" />

                    <Button Style="{StaticResource ToolbarButton}"
                            Command="{Binding ZoomInCommand}"
                            ToolTip="Zoom In"
                            Padding="4,3">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="{StaticResource IconZoomIn}"
                                   FontSize="12" />
                    </Button>
                </StackPanel>

                <!-- Spacer -->
                <Border />
            </DockPanel>
        </Border>

        <!-- Timeline Track Content -->
        <Grid Grid.Row="1">
            <!-- No timeline state (shown when ActiveTimeline is null) -->
            <StackPanel x:Name="EmptyTimelinePanel"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="Visible">
                <TextBlock Text="No sequence created" FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Create a sequence to arrange clips on a timeline" FontSize="11"
                           Foreground="{StaticResource TextTertiaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,12" />
                <Button Style="{StaticResource AccentButton}"
                        Command="{Binding CreateTimelineCommand}"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe Fluent Icons"
                                   Text="{StaticResource IconAdd}"
                                   FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center" />
                        <TextBlock Text="Create Sequence" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Timeline with clips (shown when ActiveTimeline is not null) -->
            <ScrollViewer x:Name="TimelineScroller"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Visibility="Collapsed">

                <Canvas x:Name="TrackCanvas"
                        Background="Transparent"
                        ClipToBounds="True"
                        MinHeight="80"
                        MouseLeftButtonDown="OnTrackCanvasClick"
                        SizeChanged="OnTrackCanvasSizeChanged">

                    <!-- Clips and playhead are drawn programmatically -->

                    <!-- Playhead -->
                    <Line x:Name="PlayheadLine"
                          Y1="0" Y2="200"
                          StrokeThickness="1.5"
                          Stroke="White"
                          IsHitTestVisible="False" />
                </Canvas>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
