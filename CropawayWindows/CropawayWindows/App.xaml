<Application x:Class="CropawayWindows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CropawayWindows.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Theme.xaml" />
                <ResourceDictionary Source="Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisConverter" />
            <converters:EnumToBoolConverter x:Key="EnumBoolConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:ProgressToPercentConverter x:Key="ProgressConverter" />
            <converters:DurationToStringConverter x:Key="DurationConverter" />
            <converters:MetadataToSummaryConverter x:Key="MetaSummaryConverter" />
            <converters:SliderFillWidthConverter x:Key="SliderFillConverter" />
            <converters:PluralSuffixConverter x:Key="PluralSuffixConverter" />
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisConverter" />
            <converters:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />
            <converters:NotNullToVisibilityConverter x:Key="NotNullToVisConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
