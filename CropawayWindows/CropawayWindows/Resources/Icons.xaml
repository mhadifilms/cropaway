<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Segoe Fluent Icons / MDL2 Assets glyph mappings -->
    <!-- Used for toolbar buttons and menu icons -->

    <!-- Crop mode icons -->
    <Style x:Key="IconText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentPresenter}}" />
    </Style>

    <!-- Icon glyph strings (Segoe Fluent Icons) -->
    <x:String x:Key="IconRectangle">&#xE003;</x:String>
    <x:String x:Key="IconCircle">&#xEA3A;</x:String>
